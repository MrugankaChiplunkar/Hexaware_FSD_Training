<hibernate-configuration>
    <session-factory>

        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/online?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">mruganka</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Other Hibernate settings -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Correct entity mappings -->
        <mapping class="com.Maven.Hibernate.HibernateOneToOneMapping.Address" />
        <mapping class="com.Maven.Hibernate.HibernateOneToOneMapping.Student" />
		<mapping class="com.Maven.Hibernate.HibernateOneToOneMapping.Vehicle" />
        <mapping class="com.Maven.Hibernate.HibernateOneToOneMapping.Plate" />
		
		
    </session-factory>
</hibernate-configuration>
